<h1>List Information</h1>
<h2>List Name: <%=@list.name%></h2>
<ul>
<% @list.movies.each do |movie| %>
  <% @bookmark = Bookmark.find_by(list: @list, movie: movie) %>
    <p>
      <strong>Title:</strong> <%= movie.title %><br>
      <strong>Overview:</strong> <%= movie.overview %><br>
      <%= movie.poster_url %><br>
      <strong>Rating:</strong> <%= movie.rating %><br>
      <%= link_to "Delete movie", bookmark_path(@bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </p>
    <img src="<% movie.poster_url %>" alt="image">
  <% end %>
</ul>

<%= link_to "Add a movie to the list", new_list_bookmark_path(@list) %>

<%= link_to "Return to all lists", lists_path %>
